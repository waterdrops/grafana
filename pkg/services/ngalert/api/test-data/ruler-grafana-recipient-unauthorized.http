  "name": "group42",
  "interval": "20s",
  "rules": [
    {
      "grafana_alert": {
        "title": "prom query with SSE",
        "condition": "condition",
        "uid": "UID",
        "data": [
          {
            "refId": "query",
            "queryType": "",
            "relativeTimeRange": {
              "from": 18000,
              "to": 10800
            },
            "datasourceUid": "000000002",
            "model": {
              "expr": "http_request_duration_microseconds_count",
              "hide": false,
              "interval": "",
              "intervalMs": 1000,
              "legendFormat": "",
              "maxDataPoints": 100,
              "refId": "query"
            }
          },
          {
            "refId": "reduced",
            "queryType": "",
            "relativeTimeRange": {
              "from": 18000,
              "to": 10800
            },
            "datasourceUid": "-100",
            "model": {
              "expression": "query",
              "hide": false,
              "intervalMs": 1000,
              "maxDataPoints": 100,
              "reducer": "mean",
              "refId": "reduced",
              "type": "reduce"
            }
          },
          {
